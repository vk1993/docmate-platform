<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="030-add-foreign-keys-auth" author="docmate">
        <comment>Remove auth foreign keys as refresh_tokens and verification_tokens tables don't exist in current schema</comment>
        <!-- These tables would be part of auth service implementation if needed -->
    </changeSet>

    <changeSet id="030-add-foreign-keys-users" author="docmate">
        <comment>Add foreign key constraints for user management tables</comment>

        <!-- Patients table foreign keys -->
        <addForeignKeyConstraint
                baseTableName="patients"
                baseColumnNames="id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_patients_user"/>

        <addForeignKeyConstraint
                baseTableName="patients"
                baseColumnNames="address_id"
                referencedTableName="addresses"
                referencedColumnNames="id"
                constraintName="fk_patients_address"/>

        <!-- Doctors table foreign keys -->
        <addForeignKeyConstraint
                baseTableName="doctors"
                baseColumnNames="id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_doctors_user"/>

        <addForeignKeyConstraint
                baseTableName="doctors"
                baseColumnNames="specialization_id"
                referencedTableName="specializations"
                referencedColumnNames="id"
                constraintName="fk_doctors_specialization"/>

        <addForeignKeyConstraint
                baseTableName="doctors"
                baseColumnNames="primary_address_id"
                referencedTableName="addresses"
                referencedColumnNames="id"
                constraintName="fk_doctors_primary_address"/>
    </changeSet>

    <changeSet id="030-add-foreign-keys-appointments" author="docmate">
        <comment>Add foreign key constraints for appointment tables</comment>

        <addForeignKeyConstraint
                baseTableName="appointments"
                baseColumnNames="patient_id"
                referencedTableName="patients"
                referencedColumnNames="id"
                constraintName="fk_appointments_patient"/>

        <addForeignKeyConstraint
                baseTableName="appointments"
                baseColumnNames="doctor_id"
                referencedTableName="doctors"
                referencedColumnNames="id"
                constraintName="fk_appointments_doctor"/>
    </changeSet>

</databaseChangeLog>
