<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="004-create-prescriptions-table" author="docmate">
        <createTable tableName="prescriptions">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="appointment_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="patient_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="doctor_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="prescription_number" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="status" type="VARCHAR(20)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>
            <column name="issue_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="expiry_date" type="DATE"/>
            <column name="diagnosis" type="TEXT"/>
            <column name="symptoms" type="TEXT"/>
            <column name="notes" type="TEXT"/>
            <column name="follow_up_instructions" type="TEXT"/>
            <column name="is_digital_signature" type="BOOLEAN" defaultValue="true"/>
            <column name="pharmacy_id" type="UUID"/>
            <column name="dispensed_at" type="TIMESTAMP"/>
            <column name="dispensed_by" type="VARCHAR(255)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="updated_by" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="004-create-prescription-items-table" author="docmate">
        <createTable tableName="prescription_items">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="prescription_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="medication_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="medication_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="generic_name" type="VARCHAR(255)"/>
            <column name="strength" type="VARCHAR(100)"/>
            <column name="dosage_form" type="VARCHAR(50)"/>
            <column name="quantity" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="frequency" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="duration_days" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="dosage_instructions" type="TEXT"/>
            <column name="special_instructions" type="TEXT"/>
            <column name="unit_price" type="DECIMAL(10,2)"/>
            <column name="total_price" type="DECIMAL(10,2)"/>
            <column name="is_substitute_allowed" type="BOOLEAN" defaultValue="true"/>
            <column name="refill_count" type="INTEGER" defaultValue="0"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="updated_by" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="004-add-prescription-foreign-keys" author="docmate">
        <addForeignKeyConstraint constraintName="fk_prescription_items_prescription"
                                 baseTableName="prescription_items"
                                 baseColumnNames="prescription_id"
                                 referencedTableName="prescriptions"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="004-add-prescription-indexes" author="docmate">
        <createIndex tableName="prescriptions" indexName="idx_prescriptions_appointment_id">
            <column name="appointment_id"/>
        </createIndex>
        <createIndex tableName="prescriptions" indexName="idx_prescriptions_patient_id">
            <column name="patient_id"/>
        </createIndex>
        <createIndex tableName="prescriptions" indexName="idx_prescriptions_doctor_id">
            <column name="doctor_id"/>
        </createIndex>
        <createIndex tableName="prescriptions" indexName="idx_prescriptions_prescription_number">
            <column name="prescription_number"/>
        </createIndex>
        <createIndex tableName="prescription_items" indexName="idx_prescription_items_prescription_id">
            <column name="prescription_id"/>
        </createIndex>
        <createIndex tableName="prescription_items" indexName="idx_prescription_items_medication_id">
            <column name="medication_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
