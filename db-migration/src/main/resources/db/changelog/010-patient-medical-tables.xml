<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="010-create-patient-medical-history-table" author="docmate">
        <createTable tableName="patient_medical_history">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="patient_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="allergies" type="TEXT"/>
            <column name="chronic_conditions" type="TEXT"/>
            <column name="current_medications" type="TEXT"/>
            <column name="previous_surgeries" type="TEXT"/>
            <column name="family_history" type="TEXT"/>
            <column name="emergency_contact_name" type="VARCHAR(100)"/>
            <column name="emergency_contact_phone" type="VARCHAR(15)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="updated_by" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="010-create-patient-reports-table" author="docmate">
        <createTable tableName="patient_reports">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="patient_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="test_date" type="DATE"/>
            <column name="file_url" type="TEXT"/>
            <column name="file_name" type="VARCHAR(500)"/>
            <column name="file_type" type="VARCHAR(100)"/>
            <column name="file_size" type="BIGINT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="updated_by" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="010-add-patient-medical-foreign-keys" author="docmate">
        <addForeignKeyConstraint constraintName="fk_patient_medical_history_patient"
                                 baseTableName="patient_medical_history"
                                 baseColumnNames="patient_id"
                                 referencedTableName="patients"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <addForeignKeyConstraint constraintName="fk_patient_reports_patient"
                                 baseTableName="patient_reports"
                                 baseColumnNames="patient_id"
                                 referencedTableName="patients"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="010-add-patient-medical-indexes" author="docmate">
        <createIndex tableName="patient_medical_history" indexName="idx_patient_medical_history_patient_id">
            <column name="patient_id"/>
        </createIndex>
        <createIndex tableName="patient_reports" indexName="idx_patient_reports_patient_id">
            <column name="patient_id"/>
        </createIndex>
        <createIndex tableName="patient_reports" indexName="idx_patient_reports_test_date">
            <column name="test_date"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
