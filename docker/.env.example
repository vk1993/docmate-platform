# DocMate Platform Environment Configuration
# Copy this file to .env and update the values as needed

# Database Configuration
DB_USERNAME=docmate
DB_PASSWORD=password
DB_NAME=docmate_platform

# JWT Configuration
JWT_SECRET=docmate-secret-key-for-jwt-token-generation-2024
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=docmate-files
AWS_S3_BASE_URL=https://docmate-files.s3.amazonaws.com

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
APP_EMAIL_FROM=noreply@docmate.com
APP_EMAIL_FROM_NAME=DocMate

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Monitoring
GRAFANA_ADMIN_PASSWORD=admin123

# Logging
LOG_LEVEL=INFO

# Application URLs (for inter-service communication)
GATEWAY_URL=http://gateway:8080
AUTH_SERVICE_URL=http://auth-service:8081
USER_SERVICE_URL=http://user-service:8082
APPOINTMENT_SERVICE_URL=http://appointment-service:8083
PAYMENT_SERVICE_URL=http://payment-service:8084
NOTIFICATION_SERVICE_URL=http://notification-service:8085
FILE_SERVICE_URL=http://file-service:8086
PRESCRIPTION_SERVICE_URL=http://prescription-service:8087
AVAILABILITY_SERVICE_URL=http://availability-service:8088
TAXONOMY_SERVICE_URL=http://taxonomy-service:8089
ADMIN_SERVICE_URL=http://admin-service:8090
